<Application x:Class="ristorante_frontend.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ristorante_frontend" xmlns:converters="clr-namespace:ristorante_frontend.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resource/Colors.xaml"/>
                <ResourceDictionary Source="Resource/Button.xaml"/>
                <ResourceDictionary Source="Resource/LoginRegisterButton.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>

            <converters:BooleanToVisibilityConverter x:Key="B2VConverter"></converters:BooleanToVisibilityConverter>


        </ResourceDictionary>

    </Application.Resources>
</Application>
